<div class="form drink-bg">

    <div class="header">

        <h3>Click to View Recipe</h3>

    </div>

    <div class="tab-content">

        <% @drink.each do |drink| %>

        <form action="/drink/recipe" method="POST">
            <div class="field-wrap">
                <input type="hidden" name="id" value="<%= drink[:id] %>" />
                <input type="submit" name="drinkname" value="<%= drink[:name] %>"/>
            </div>
        </form>

        <% end %>

    </div>

</div>

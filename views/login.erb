<div class="form whiskey-bg">

      <ul class="tab-group">
        <li class="tab active"><a href="#login">Log In</a></li>
        <li class="tab"><a href="#signup">Sign Up!</a></li>
      </ul>

      <div class="tab-content">

        <div id="login">

          <div class="message">

            <% if @newlogin %>

              <h1 class="newlogin"><%= @message %></h1>

            <% else %>

              <h3 class="badlogin"><%= @message %></h3>

            <% end %>

          </div>  <!-- message -->

          <form action="/home/login" method="POST">

            <div class="field-wrap">
            <label>
              <span class="oldLabel">Username</span><span class="req">*</span><span class="newLabel">Are you over 21?</span>
            </label>
            <input type="text" name="username" required autocomplete="off"/>
          </div>

          <div class="field-wrap">
            <label>
              <span class="oldLabel">Password</span><span class="req">*</span><span class="newLabel">That's a good one!</span>
            </label>
            <input type="password" name="password" required autocomplete="off"/>
          </div>

          <p class="forgot"><a href="#">Forgot Password?</a></p>

          <button class="button button-block" name="button" value="login"/>Log In</button>

          </form>

        </div>

        <div id="signup">

            <div class="register">

              <h1>Sign Up</h1>

            </div>

          <form action="/home/register" method="POST">

          <div class="field-wrap">
            <label>
              <span class="oldLabel">Create A Username</span><span class="req">*</span><span class="newLabel">Bottoms up!</span>
            </label>
            <input type="text" name="username" required autocomplete="off"/>
          </div>

          <div class="field-wrap">
            <label>
              <span class="oldLabel">Set A Password</span><span class="req">*</span><span class="newLabel">Please password responsibly.</span>
            </label>
            <input type="password" name="password" required autocomplete="off"/>
          </div>

          <p class="required">* Required</p>

          <button type="submit" class="button button-block" name="button" value="next"/>Submit</button>

          </form>

        </div>

      </div><!-- tab-content -->

</div> <!-- /form -->

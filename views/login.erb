<div class="form">

      <div class="logo">
        <img src="/images/drinkery_logo.png" />
      </div>

      <ul class="tab-group">
        <li class="tab active"><a href="#login">Log In</a></li>
        <li class="tab"><a href="#signup">Sign Up!</a></li>
      </ul>

      <div class="tab-content">

        <div id="login">

          <div class="message">

            <% if @noLogin %>

              <h1>Welcome!</h1>

            <% end %>

          </div>  <!-- message -->

          <form action="/" method="POST">

            <div class="field-wrap">
            <label>
              <span class="oldLabel">Username</span><span class="req">*</span><span class="newLabel">Here's Johnny!</span>
            </label>
            <input type="text" name="username" required autocomplete="off"/>
          </div>

          <div class="field-wrap">
            <label>
              <span class="oldLabel">Password</span><span class="req">*</span><span class="newLabel">Are You Sure?</span>
            </label>
            <input type="password" name="password" required autocomplete="off"/>
          </div>

          <p class="forgot"><a href="#">Forgot Password?</a></p>

          <button class="button button-block" name="button" value="login"/>Log In</button>

          </form>

        </div>

        <div id="signup">

            <div class="message">

              <h1>Sign Up</h1>

            </div>

          <form action="/" method="POST">

          <div class="field-wrap">
            <label>
              <span class="oldLabel">Create A Username</span><span class="req">*</span><span class="newLabel">Make It A Good One</span>
            </label>
            <input type="text" name="username" required autocomplete="off"/>
          </div>

          <div class="field-wrap">
            <label>
              <span class="oldLabel">Set A Password</span><span class="req">*</span><span class="newLabel">Please Remember Me</span>
            </label>
            <input type="password" name="password" required autocomplete="off"/>
          </div>

          <p class="required">* Required</p>

          <button type="submit" class="button button-block" name="button" value="next"/>Submit</button>

          </form>

        </div>

      </div><!-- tab-content -->

</div> <!-- /form -->
